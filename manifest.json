{
  "manifest_version": 3,
  "name": "Football Fixture Tools",
  "version": "1.0.0",
  "description": "Export fixtures from FA Full-Time and import them into 360Player team calendars.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon_16x16.png",
      "32": "icons/icon_32x32.png",
      "48": "icons/icon_48x48.png",
      "128": "icons/icon_128x128.png"
    }
  },
  "icons": {
    "16": "icons/icon_16x16.png",
    "32": "icons/icon_32x32.png",
    "48": "icons/icon_48x48.png",
    "128": "icons/icon_128x128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "*://fulltime.thefa.com/*",
    "*://app.360player.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "papaparse.min.js"
      ],
      "matches": ["*://app.360player.com/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["*://fulltime.thefa.com/*"],
      "js": ["content-scraper.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://app.360player.com/*"],
      "js": ["content-import.js"],
      "run_at": "document_idle"
    }
  ]
}

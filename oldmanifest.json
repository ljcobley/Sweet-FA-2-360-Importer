{
  "manifest_version": 3,
  "name": "Sweet FA 360 Importer",
  "version": "1.0.0",
  "description": "Import FA Full-Time football fixtures seamlessly into your 360Player team calendar.",
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon_16x16.png",
    "32": "icons/icon_32x32.png",
    "48": "icons/icon_48x48.png",
    "128": "icons/icon_128x128.png"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://app.360player.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "lib/papaparse.min.js"
      ],
      "matches": [
        "https://app.360player.com/*"
      ]
    }
  ]
}